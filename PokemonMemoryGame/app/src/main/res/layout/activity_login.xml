<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_login_screen"
    android:padding="32dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="106dp"
        android:layout_height="105dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/trainer_sprite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/pixel_font"
        android:text="Pokemon Flip Match"
        android:textAlignment="center"
        android:textColor="@color/gba_white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/gba_white"
        android:fontFamily="@font/pixel_font"
        android:hint="USERNAME"
        android:textColor="@color/gba_black" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/gba_white"
        android:fontFamily="@font/pixel_font"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColor="@color/gba_black" />

    <Button
        android:id="@+id/loginButton"
        android:text="LOGIN"
        android:background="@drawable/btn_login"
        android:textColor="@color/gba_white"
        android:fontFamily="@font/pixel_font"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/footerImage"
        android:layout_width="161dp"
        android:layout_height="130dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/pokeball_sprite" />
</LinearLayout>

